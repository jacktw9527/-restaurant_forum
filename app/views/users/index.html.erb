<div class="container">
  <h1>美食達人</h1>
  <hr>
  <div class="pannel pannel-default">
    <div class="pannel-body following-table">
      <% @users.each do |user| %>
        <div class="col-md-3 col-sm-4 col-xs-6 text-center user-item">
          <div>
            <%= image_tag "https://via.placeholder.com/150x180", class: "img-resonsive" %>
          </div>

          <div>
              <%= link_to user_path(user) do %>
                <%= user.name %>
              <% end %>
              <br />
              <%= render partial: "shared/follow", locals: {user: user} %>
              <%= render partial: "shared/friend", locals: {user: user} %>
          </div>

        </div>
      <% end %>
    </div>

    <div class="clearfix"></div>
  </div>
  
</div>
